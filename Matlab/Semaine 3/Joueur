import java.awt.event.KeyEvent;
import java.util.ArrayList;

import edu.princeton.cs.introcs.StdDraw;


public class Joueur {
	public String name;
	public int score;
	public int score_provisoire;
	public double position;
	public int pos_tab;
	public int nb_tresor;
	public int game;//=0 ou 1 pour savoir c au tour de qui de jouer
	public ArrayList<Integer> coffreBas = new ArrayList<>();
	public ArrayList<Integer> Intermediaire = new ArrayList<>();
	
	public Joueur (String name, double pos,int sc, int ssc, int tab, int n, int game, ArrayList<Integer> h,ArrayList<Integer> inter) {
		this.name = name;
		this.position = pos;
		this.score = sc;
		this.score_provisoire =ssc;
		this.pos_tab = tab;
		this.nb_tresor = n;
		this.game=game;
		this.coffreBas = h;
		this.Intermediaire = inter;
	}
	
	public static double descendre_joueur(Joueur j, double pas){
		j.position-=pas;
		j.pos_tab+=1;
		return j.position;
	}
	public static double monter_joueur(Joueur j, double pas){
		j.position+=pas;
		j.pos_tab-=1;
		return j.position;
	}
	
	public void afficher_joueur(double position_initiale, int x) {
		StdDraw.picture(x, position_initiale, "plongeur_final.png",0.5,0.5);
	}
		

public static void main(String[] args) {
	}
}
