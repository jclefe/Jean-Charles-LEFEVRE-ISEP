
public class Cave {

	public double niveaux;
	public int nb;
	
	public Cave(int nb) { //nb correspond a la cave 1,2 ou 3
		this.nb = nb;
		
		if(nb==1) {
			double niv = 9+ (int) (Math.random()*(12-8));
			this.niveaux = niv;
		}
		if(nb==2) {
			double niv = 6+ (int) (Math.random()*(9-5));
			this.niveaux = niv;
		}
		if(nb==3) {
			double niv = 3+ (int) (Math.random()*(6-2));
			this.niveaux = niv;
		}
	}
	
	public static void main(String[] args) {
	}

}
