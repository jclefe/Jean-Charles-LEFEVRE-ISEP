import java.io.*;
import java.nio.charset.Charset;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.nio.file.Path;
import java.util.List;

public class Dictionnaire {

	public String nom;
	
	public Dictionnaire(String vnom)
	{
		this.nom = vnom;
	}
	
	public boolean find(String mot)
	{
		Path test = Paths.get("D:\\Utilities\\Eclipse\\Workspace\\TP10", this.nom); // Le chemin d'acc√®s varie selon
		Charset charset = Charset.forName("ISO-8859-1");							// le pc
		
		try {
			List<String> lines = Files.readAllLines(test, charset);
			for (String line : lines) {
				if(mot.equals(line))
				{
					System.out.println("YES");
					return true;
				}
			}
			return false;
		} catch (IOException e) {
			System.out.println(e);
		}
		return false;
	}
	
	public static void main(String[] args)
	{
		Dictionnaire test = new Dictionnaire("dictionnaire.txt");
		test.find("vitales");
	}
}
